<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiosk System</title>
    <link rel="stylesheet" href="/public/maincss/kiosk.css">
</head>
<body>
    <!-- Top Header with Cafe Name -->
    <header class="top-header">
        <h1>2N1 Cafe Corp.</h1>
    </header>

    <div class="container">
        <!-- Sidebar with Category Image and Buttons -->
        <aside class="sidebar">
            <button class="category-btn">
                <img src="https://via.placeholder.com/50" alt="Nachos & Fries">
                <span>Nachos & Fries</span>
            </button>
            <button class="category-btn">
                <img src="https://via.placeholder.com/50" alt="Flavored Chicken">
                <span>Flavored Chicken</span>
            </button>
            <button class="category-btn">
                <img src="https://via.placeholder.com/50" alt="Croffle">
                <span>Croffle</span>
            </button>
            <button class="category-btn">
                <img src="https://via.placeholder.com/50" alt="Waffle">
                <span>Waffle</span>
            </button>
            <button class="category-btn">
                <img src="https://via.placeholder.com/50" alt="Iced Coffee">
                <span>Iced Coffee</span>
            </button>
            <button class="category-btn">
                <img src="https://via.placeholder.com/50" alt="Milktea">
                <span>Milktea</span>
            </button>
        </aside>

        <!-- Main Content Section -->
        <div class="main-content">
            <!-- Product List Section with Scrollable Area -->
            <div class="product-list">
                <!-- Sample Products (3 per row) -->
                <div class="product-item">
                    <img src="https://via.placeholder.com/80x100" alt="Spanish Latte">
                    <p>Spanish Latte</p>
                    <span>49.00</span>
                    <button class="add-button">+</button>
                </div>
                <div class="product-item">
                    <img src="https://via.placeholder.com/80x100" alt="French Vanilla">
                    <p>French Vanilla</p>
                    <span>49.00</span>
                    <button class="add-button">+</button>
                </div>
                <div class="product-item">
                    <img src="https://via.placeholder.com/80x100" alt="Cafe Mocha">
                    <p>Cafe Mocha</p>
                    <span>49.00</span>
                    <button class="add-button">+</button>
                </div>
                <!-- Additional Sample Products for Scroll -->
                <div class="product-item">
                    <img src="https://via.placeholder.com/80x100" alt="Caramel Latte">
                    <p>Caramel Latte</p>
                    <span>49.00</span>
                    <button class="add-button">+</button>
                </div>
                <div class="product-item">
                    <img src="https://via.placeholder.com/80x100" alt="Matcha Latte">
                    <p>Matcha Latte</p>
                    <span>49.00</span>
                    <button class="add-button">+</button>
                </div>
                <div class="product-item">
                    <img src="https://via.placeholder.com/80x100" alt="Americano">
                    <p>Americano</p>
                    <span>49.00</span>
                    <button class="add-button">+</button>
                </div>
            </div>

            <!-- Initially Hidden Cart Section -->
            <div class="cart-section" id="cart-section">
                <!-- Sample Cart Items -->
                <div class="cart-item">
                    <img src="https://via.placeholder.com/50" alt="Chocolate Croffle">
                    <div class="cart-details">
                        <p class="cart-product-name">Chocolate Croffle</p>
                        <p class="cart-product-price">120.00</p>
                        <div class="quantity-control">
                            <button class="quantity-btn">-</button>
                            <span>2</span>
                            <button class="quantity-btn">+</button>
                        </div>
                    </div>
                </div>
                <div class="cart-item">
                    <img src="https://via.placeholder.com/50" alt="Spanish Latte">
                    <div class="cart-details">
                        <p class="cart-product-name">Spanish Latte</p>
                        <p class="cart-product-price">49.00</p>
                        <div class="quantity-control">
                            <button class="quantity-btn">-</button>
                            <span>1</span>
                            <button class="quantity-btn">+</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer with Order Controls -->
        <footer class="order-footer">
            <button class="cancel-button">Cancel</button>
            <button class="pay-button" onclick="toggleCart()">Review & Pay</button>
            <span class="order-total">Total: $185.90</span>
        </footer>
    </div>

    <script>
        function toggleCart() {
            const cartSection = document.getElementById("cart-section");
            cartSection.classList.toggle("visible");
        }
    </script>
</body>
</html>
